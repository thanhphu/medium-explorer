    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch back-end",
            "program": "${workspaceFolder}/back-end/index.js",
            "env": {
                "MOCK_MODE": "false"
            },
            "cwd": "${workspaceFolder}/back-end"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch front-end",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}"
        }
    ]
}